				"exec": [
					"// Basic response tests for successful requests",
					"if (pm.response.code === 200) {",
					"    pm.test(\"Status code is 200\", function () {",
					"        pm.response.to.have.status(200);",
					"    });",
					"    ",
					"    // Test response time",
					"    pm.test(\"Response time is less than 2000ms\", function () {",
					"        pm.expect(pm.response.responseTime).to.be.below(2000);",
					"    });",
					"}",
					"",
					"// For error cases, test error structure",
					"if (pm.response.code >= 400) {",
					"    pm.test(\"Error response has expected structure\", function () {",
					"        var jsonData = pm.response.json();",
					"        pm.expect(jsonData).to.have.property('error').or.have.property('message');",
					"    });",
					"}",
					"",
					"// Test that response has valid JSON",
					"pm.test(\"Response has valid JSON\", function () {",
					"    pm.response.to.be.json;",
					"});"
				]
			}
